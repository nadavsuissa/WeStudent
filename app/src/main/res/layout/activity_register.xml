                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="669dp"
                android:ems="10"
                android:hint="home town"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/registerYearOfStudying"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="742dp"
                android:ems="10"
                android:hint="year of studying"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/registerBio"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="808dp"
                android:ems="10"
